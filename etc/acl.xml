<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="GardenLawn_Core::config" title="GardenLawn Core Config" sortOrder="100">
                    <!-- Ten zasób kontroluje sekcję 'Database Cleanup' w konfiguracji -->
                    <resource id="GardenLawn_Core::config_clean" title="GardenLawn Core Cleanup" sortOrder="10">
                        <!-- Zasób wymagany przez GardenLawn\Core\Controller\Adminhtml\Config\Cleanup -->
                        <resource id="GardenLawn_Core::run_cleanup" title="Run Config Cleaner" sortOrder="10"/>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
