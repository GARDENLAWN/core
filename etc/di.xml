<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Magento\Framework\App\ResourceConnection\Proxy" type="Magento\Framework\App\ResourceConnection"/>
    <preference for="Magento\Framework\App\ResourceConnection\Config\Proxy"
                type="Magento\Framework\App\ResourceConnection\Config"/>
    <preference for="Magento\Framework\Event\Manager\Proxy" type="Magento\Framework\Event\Manager"/>
    <preference for="Magento\AwsS3\Driver\AwsS3" type="GardenLawn\Core\Plugin\AwsS3\Driver\AwsS3Plugin"/>
    <preference for="Magento\Newsletter\Model\Subscriber" type="GardenLawn\Core\Model\Newsletter\Subscriber" />
    <type name="Magento\Theme\Model\View\Design">
        <arguments>
            <argument name="themes" xsi:type="array">
                <item name="adminhtml" xsi:type="string">GardenLawn/Admintheme</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Catalog\Model\Indexer\Category\Product\Action\Full">
        <arguments>
            <argument name="batchRowsCount" xsi:type="number">500</argument>
        </arguments>
    </type>
    <type name="Magento\Catalog\Model\ResourceModel\Product\Indexer\Price\BatchSizeCalculator">
        <arguments>
            <argument name="batchRowsCount" xsi:type="array">
                <item name="default" xsi:type="number">500</item>
                <item name="configurable" xsi:type="number">500</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Catalog\Model\ImageUploader">
        <arguments>
            <argument name="allowedExtensions" xsi:type="array">
                <item name="jpg" xsi:type="string">jpg</item>
                <item name="jpeg" xsi:type="string">jpeg</item>
                <item name="gif" xsi:type="string">gif</item>
                <item name="png" xsi:type="string">png</item>
                <item name="svg" xsi:type="string">svg</item>
                <item name="webp" xsi:type="string">webp</item>
                <item name="avif" xsi:type="string">avif</item>
            </argument>
            <argument name="allowedMimeTypes" xsi:type="array">
                <item name="jpg" xsi:type="string">image/jpeg</item>
                <item name="jpeg" xsi:type="string">image/jpeg</item>
                <item name="gif" xsi:type="string">image/gif</item>
                <item name="png" xsi:type="string">image/png</item>
                <item name="webp" xsi:type="string">image/webp</item>
                <item name="svg" xsi:type="string">image/svg+xml</item>
                <item name="avif" xsi:type="string">image/avif</item>
            </argument>
        </arguments>
    </type>
    <virtualType name="Magento\Catalog\CategoryImageUpload" type="Magento\Catalog\Model\ImageUploader">
        <arguments>
            <argument name="allowedExtensions" xsi:type="array">
                <item name="jpg" xsi:type="string">jpg</item>
                <item name="jpeg" xsi:type="string">jpeg</item>
                <item name="gif" xsi:type="string">gif</item>
                <item name="png" xsi:type="string">png</item>
                <item name="svg" xsi:type="string">svg</item>
                <item name="webp" xsi:type="string">webp</item>
                <item name="avif" xsi:type="string">avif</item>
            </argument>
            <argument name="allowedMimeTypes" xsi:type="array">
                <item name="jpg" xsi:type="string">image/jpeg</item>
                <item name="jpeg" xsi:type="string">image/jpeg</item>
                <item name="gif" xsi:type="string">image/gif</item>
                <item name="png" xsi:type="string">image/png</item>
                <item name="webp" xsi:type="string">image/webp</item>
                <item name="svg" xsi:type="string">image/svg+xml</item>
                <item name="avif" xsi:type="string">image/avif</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="MediaGalleryImageUploader" type="Magento\MediaStorage\Model\File\Uploader">
        <arguments>
            <argument name="allowedExtensions" xsi:type="array">
                <item name="jpg" xsi:type="string">jpg</item>
                <item name="jpeg" xsi:type="string">jpeg</item>
                <item name="gif" xsi:type="string">gif</item>
                <item name="png" xsi:type="string">png</item>
                <item name="svg" xsi:type="string">svg</item>
                <item name="webp" xsi:type="string">webp</item>
                <item name="avif" xsi:type="string">avif</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Magento\Catalog\Model\Product\Media\Config">
        <arguments>
            <argument name="allowedExtensions" xsi:type="array">
                <item name="jpg" xsi:type="string">jpg</item>
                <item name="jpeg" xsi:type="string">jpeg</item>
                <item name="gif" xsi:type="string">gif</item>
                <item name="png" xsi:type="string">png</item>
                <item name="svg" xsi:type="string">svg</item>
                <item name="webp" xsi:type="string">webp</item>
                <item name="avif" xsi:type="string">avif</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Framework\File\Uploader">
        <plugin name="gardenlawn_core_framework_file_uploader"
                type="GardenLawn\Core\Plugin\Framework\File\UploaderPlugin" sortOrder="10"/>
    </type>
    <type name="Magento\Framework\Image\Adapter\Gd2">
        <plugin name="gardenlawn_core_webp_support" type="GardenLawn\Core\Plugin\Framework\Image\Adapter\Gd2Plugin"/>
    </type>
    <type name="Magento\Catalog\Model\View\Asset\Image">
        <plugin name="gardenlawn_core_catalog_asset_image_webp"
                type="GardenLawn\Core\Plugin\Catalog\Model\View\Asset\ImagePlugin"/>
        <plugin name="gardenlawn_core_catalog_asset_image_transformation_webp"
                type="GardenLawn\Core\Plugin\Catalog\Model\View\Asset\ImageTransformationPlugin"/>
    </type>
    <!--
    <type name="Magento\Catalog\Model\View\Asset\ImageFactory">
        <plugin name="gardenlawn_core_catalog_asset_image_factory_webp"
                type="GardenLawn\Core\Plugin\Catalog\Model\View\Asset\ImageFactoryPlugin"/>
    </type>
    -->
    <!-- Add allowed extensions to WYSIWYG uploader & trigger post-upload sync -->
    <type name="Magento\Cms\Model\Wysiwyg\Images\Storage">
        <plugin name="gardenlawn_core_wysiwyg_storage_plugin"
                type="GardenLawn\Core\Plugin\Cms\Model\Wysiwyg\Images\StoragePlugin" sortOrder="10"/>
        <plugin name="gardenlawn_core_wysiwyg_storage_resize_file_plugin"
                type="GardenLawn\Core\Plugin\Cms\Model\Wysiwyg\Images\StorageResizeFilePlugin" sortOrder="20"/>
    </type>
    <!-- Whitelist modern image formats in the protected extension validator -->
    <type name="Magento\MediaStorage\Model\File\Validator\NotProtectedExtension">
        <plugin name="gardenlawn_core_whitelist_modern_image_formats"
                type="GardenLawn\Core\Plugin\MediaStorage\Model\File\Validator\NotProtectedExtensionPlugin"
                sortOrder="10"/>
    </type>
    <type name="Magento\Framework\Console\CommandList">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="gardenlawn_s3_sync_static" xsi:type="object">GardenLawn\Core\Console\Command\SyncStaticAssets</item>
                <item name="gardenlawn_dealer_sync_prices" xsi:type="object">GardenLawn\Core\Console\Command\SyncDealerPrices</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Contact\Controller\Index\Post">
        <plugin name="gardenlawn_core_contact_post_plugin" type="GardenLawn\Core\Plugin\ContactPostPlugin" sortOrder="10"/>
    </type>
    <type name="Magento\Wishlist\CustomerData\Wishlist">
        <plugin name="gardenlawn_core_wishlist_customer_data_plugin" type="GardenLawn\Core\Plugin\Wishlist\CustomerData\WishlistPlugin" sortOrder="10"/>
    </type>
    <type name="Magento\Sales\CustomerData\LastOrderedItems">
        <plugin name="gardenlawn_core_last_ordered_items_plugin" type="GardenLawn\Core\Plugin\LastOrderedItemsPlugin" sortOrder="10"/>
    </type>
    <type name="Magento\Sitemap\Model\ItemProvider\Composite">
        <arguments>
            <argument name="itemProviders" xsi:type="array">
                <item name="gardenlawn_gallery_provider" xsi:type="object">GardenLawn\Core\Model\Sitemap\ItemProvider\Gallery</item>
            </argument>
        </arguments>
    </type>
    <type name="Amasty\ImportCore\Import\Filesystem\FileUploader">
        <plugin name="gardenlawn_core_amasty_file_uploader_plugin"
                type="GardenLawn\Core\Plugin\Amasty\FileUploaderPlugin" sortOrder="10"/>
    </type>
    <!-- Override the SelectBuilder globally so both Sync and StockIndexer use it -->
    <preference for="Magento\InventoryConfigurableProductIndexer\Indexer\SelectBuilder"
                type="GardenLawn\Core\Model\InventoryConfigurableProductIndexer\Indexer\SelectBuilder"/>

    <!-- Santander B2B Restriction -->
    <type name="Aurora\Santander\ViewModel\Rates">
        <plugin name="gardenlawn_core_santander_rates_view_model_plugin"
                type="GardenLawn\Core\Plugin\Payment\SantanderRatesViewModelPlugin" sortOrder="10"/>
    </type>
</config>
